<!DOCTYPE html>
<html>
<head>
  <title>Create New Article</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Create New Article</h1>

    <%= form_with scope: :article, url: articles_path, local: true, class: 'needs-validation', novalidate: true do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control', rows: 4, required: true %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Article', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <a href="<%= articles_path %>" class="btn btn-secondary mt-2">Back to Articles</a>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
